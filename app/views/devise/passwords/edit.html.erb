<div class="container-sign-in">
  <header id="log-in">Change your password</header>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: "New password",
                  label: false,
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", placeholder:"password", class: "no-border" } %>
      <%= f.input :password_confirmation,
                  label: "Confirm your new password",
                  label: false,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder:"password confirmation", class: "no-border" } %>
    </div>

    <div class="form-actions">
      <button class="plana-btn-green"><%= f.button :submit, "Change my password" %></button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
