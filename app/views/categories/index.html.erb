<!-- list of all categories ( Category.all ) + 2 card for tools that redirect to their route -->
<%= render 'shared/navbar' %>
<div class="main-container">

  <div class='category-index-container'>
    <div class='index-header pt-4'>
      Tools
    </div>
  </div>

  <div class="grid-card-container">

      <div class="grid-cards">
        <%= link_to tripcalculator_path, class: "no-decor" do %>
        <div class="grid-card">
          <div class="grid-text">
            Measure my travel
          </div>
          <div class="image-icon">
            <%= image_tag "icon-btn.png", alt: "magnify", width: 50 %>
          </div>
        </div>
        <% end %>

        <div class="grid-card">
          <div class="grid-text">
            Measure my meal
          </div>
          <div class="image-icon">
            <%= image_tag "leaf-grey.png", alt: "leaf", width: 50 %>
          </div>
        </div>

      </div>

      <div class="grid-cards">
        <%= link_to category_path(@categories[0]), class: "no-decor" do %>
        <div class="grid-card">
          <div class="grid-text">
            <%= @categories[0].name.capitalize %>
          </div>
          <div class="image-icon">
            <%= image_tag "label.png", alt: "label", width: 50 %>
          </div>
        </div>
        <% end %>
        <%= link_to category_path(@categories[1]), class: "no-decor" do %>
        <div class="grid-card">
          <div class="grid-text">
            <%= @categories[1].name.capitalize %>
          </div>
          <div class="image-icon">
            <%= image_tag "carrot.png", alt: "carrot", width: 50%>
          </div>
        </div>
        <% end %>
        </div>

        <div class="grid-cards">
          <%= link_to category_path(@categories[2]), class: "no-decor" do %>
          <div class="grid-card">
            <div class="grid-text">
              <%= @categories[2].name.capitalize %>
            </div>
            <div class="image-icon">
              <%= image_tag "grocery.png", alt: "grocery", width: 50 %>
            </div>
          </div>
          <% end %>
          <%= link_to category_path(@categories[3]), class: "no-decor" do %>
          <div class="grid-card">
            <div class="grid-text">
              <%= @categories[3].name.capitalize %>
            </div>
            <div class="image-icon">
              <%= image_tag "seed.png", alt: "seed", width: 50 %>
            </div>
          </div>
          <% end %>
        </div>

        <div class="grid-cards mb-50">
          <%= link_to category_path(@categories[4]), class: "no-decor" do %>
          <div class="grid-card">
            <div class="grid-text">
              <%= @categories[4].name.capitalize %>
            </div>
            <div class="image-icon">
              <%= image_tag "apple.png", alt: "apple", width: 50 %>
            </div>
          </div>
          <% end %>
          <%= link_to category_path(@categories[5]), class: "no-decor" do %>
          <div class="grid-card">
            <div class="grid-text">
              <%= @categories[5].name.capitalize %>
            </div>
            <div class="image-icon">
              <%= image_tag "tree.png", alt: "tree", width: 50 %>
            </div>
          </div>
          <% end %>
        </div>
    </div>
</div>
