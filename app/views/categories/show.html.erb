    <% @items.each do |recipe| %>
    <a href="<%= recipe.url %>" target="_blank" style="text-decoration: none;">
      <div class="item-card">
        <img src="<%= cl_image_path recipe.photo.key%>">
        <div class="item-card-infos">
          <h2><%= recipe.name %></h2>
          <p><i class="far fa-clock"></i> <%= recipe.description %> minutes</p>
          <span class='heart-icon'><i class="far fa-heart"></i></span>
        </div>
      </div>
    </a>

    <% end %>

  <% elsif @category.name == "shop responsibly"  %>

  <div class="search-bar-container" style="display: flex;">
      <div class="search-bar" style="width: 300px;">
      <%= form_tag category_path(@category), method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control search-btn",
          placeholder: "Find a shop"
        %>
      </div>
      <div class="magnifying-glass" style="margin-left: 15px; margin-top: 15px">
        <%= submit_tag "🔍", class: "fas fa-search p-1 search-btn-items" %>
      </div>
    <% end %>
      <!-- <button class="search-btn"><i class="fas fa-search"></i> search recipe </button> -->
    </div>


    <% @items.each do |shop| %>
    <a href="<%= shop.url %>" target="_blank" style="text-decoration: none;">
      <div class="item-card">
        <img src="<%= cl_image_path shop.photo.key%>">
        <div class="item-card-infos">
          <h2><%= shop.name.capitalize %></h2>
          <p><i class="fas fa-dollar-sign"></i> Price range: <%= shop.description %>/5</p>
          <span class='heart-icon'><i class="far fa-heart"></i></span>
        </div>
      </div>
    </a>

    <% end %>

  <% else %>

  <h3>COMING SOONNNN :) </h3>

